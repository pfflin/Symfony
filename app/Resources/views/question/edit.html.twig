{% extends 'base.html.twig' %}

{% block main %}
    <form class="form-horizontal" action="{{ path('edit', {id: question.id}) }}" method="POST">
        <fieldset>
            <legend>Edit Question</legend>
            <div class="form-group">
                <label class="col-sm-4 control-label" for="article_content">Question:</label>
                <div class="col-sm-6">
                        <textarea class="form-control" rows="6" id="article_content"
                                  name="quizbundle_question[question]">{{ question.question }}</textarea>
                </div>
            </div>

            <div class="form-group">

                <label class="col-sm-4 control-label" for="first_option">Option One</label>
                <div class="col-sm-4 ">
                    <input type="text" class="form-control" id="first_option" placeholder="Add option"
                           name="quizbundle_question[opt1]" value="{{ question.opt1 }}">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label" for="second_option">Option Two</label>
                <div class="col-sm-4 ">
                    <input type="text" class="form-control" id="second_option" placeholder="Add option"
                           name="quizbundle_question[opt2]" value="{{ question.opt2 }}">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label" for="third_option">Option Three</label>
                <div class="col-sm-4 ">
                    <input type="text" class="form-control" id="third_option" placeholder="Add option"
                           name="quizbundle_question[opt3]" value="{{ question.opt3 }}">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label" for="third_option">Correct Answer</label>
                <div class="col-sm-4 ">
                    <input type="text" class="form-control" id="third_option" placeholder="Add option"
                           name="quizbundle_question[correct]" value="{{ question.correct }}">
                </div>
            </div>
            {{ form_row(form._token) }}
            <div class="form-group">
                <div class="col-sm-4 col-sm-offset-4">
                    <a class="btn btn-default" href="{{ path('user_profile') }}">Cancel</a>
                    <button type="submit" class="btn btn-success">Save</button>
                </div>
            </div>
        </fieldset>
    </form>
{% endblock %}
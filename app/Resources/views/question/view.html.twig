{% extends 'base.html.twig' %}

{% block main %}
    <h1>Question Numer {{ id-1 }}</h1>
<h2>And the question is " {{ question.question }} "</h2>
    <ul>
        <li class="opt" id="one">{{ question.opt1 }}</li>
        <li class="opt">{{ question.opt2 }}</li>
        <li class="opt">{{ question.opt3 }}</li>
    </ul>

    <div id="myModal" class="modal">
        <div class="modal-content">
            <a href={{ path('question',{id:id}) }} hidden id="ok" class="close">OK</a>
            <div id="answer">We are checking your answer...
            <div class="progress">
                <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 75%"></div>
            </div>
            </div>
        </div>
        </div>
{% endblock %}
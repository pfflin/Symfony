{% extends 'base.html.twig' %}

{% block main %}
<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <div class="single category">
                <h3 class="side-title">Ranking</h3>
                <ul class="list-group">
                    {% for user in users %}
                        <li class="list-group-item {% if app.user == user %}{{ 'active' }}{% endif %}" >
                            {{ loop.index }} : <span>{{ user.fullName }}<span class="pull-right">{{ user.totalRank }}</span></span></li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% extends 'base.html.twig' %}

{% block main %}
    <h1>Hello, {{ app.user.fullName }}</h1>
    <h2>Questions you have commented on</h2>
    <ul>
        {% for question in questions %}
            <div class="col-md-6">
                <article>
                    <header>
                        <h2>{{ question.question }}</h2>
                    </header>
                    <small class="author">
                        {{ question.correct }}
                    </small>
                    <footer>
                        <div class="pull-right">
                            <a class="btn btn-default btn-xs"
                               href="{{ path('getOne',{'id': question.id}) }}">Read more&raquo;</a>
                        </div>
                    </footer>
                </article>
            </div>
            {% else %}
            <h3>You haven commented on any questions yet</h3>
        {% endfor %}
    </ul>
{% endblock %}